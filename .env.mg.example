# SAIC MG iSmart Gateway Configuration

# MQTT Broker Configuration
MQTT_URI=mqtt://mosquitto:1883
# For TLS in production, use: MQTT_URI=mqtts://mqtt.masstransit.hk:8883
MQTT_USER=mg_gateway
MQTT_PASSWORD=change_me_gateway_password
MQTT_CLIENT_ID=saic-python-mqtt-gateway
MQTT_TOPIC=saic

# SAIC API Credentials
SAIC_USER=system@air.city
SAIC_PASSWORD=ac202303

# SAIC API Configuration - Test both regions
# European endpoint (try first)
SAIC_REST_URI=https://gateway-mg-eu.soimt.com/api.app/v1/
SAIC_REGION=eu
# Australian endpoint (fallback)
# SAIC_REST_URI=https://gateway-mg-au.soimt.com/api.app/v1/
# SAIC_REGION=au

SAIC_TENANT_ID=459771
SAIC_RELOGIN_DELAY=900

# Message polling
MESSAGES_REQUEST_INTERVAL=60

# Battery capacity mapping (VIN=capacity in kWh)
# Example: BATTERY_CAPACITY_MAPPING=LSJXXXX=54.0,LSJYYYY=64.0
BATTERY_CAPACITY_MAPPING=

# Charge monitoring
CHARGE_MIN_PERCENTAGE=1.0

# Home Assistant Integration
HA_DISCOVERY_ENABLED=true
HA_DISCOVERY_PREFIX=homeassistant
HA_SHOW_UNAVAILABLE=true

# ABRP Integration (optional)
# ABRP_API_KEY=8cfc314b-03cd-4efe-ab7d-4431cd8f2e2d
# ABRP_USER_TOKEN=VIN=token

# Debug
PUBLISH_RAW_API_DATA_ENABLED=false
LOG_LEVEL=INFO
